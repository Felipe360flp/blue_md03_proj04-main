  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "username": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "avatar": {
            "type": "string"
          }
        }
      },
      "rNmCharacters": {
        "type": "object",
        "properties": {
          "user": {
            "type": "string"
          },
          "nome": {
            "type": "string"
          },
          "url": {
            "type": "string"
          }
        }        
      }
